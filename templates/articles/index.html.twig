{% extends 'base.html.twig' %}

{% block title %}Symfony Articles{% endblock %}

{% block body %}
     <div class="container">
        <div class="row">
            <div class="col-md-12 ml-md-auto">
                <a href="{{ path('new_article') }}" class="btn btn-info float-right">Add Articles</a>
            </div>
            <div class="col-md-12 ml-md-auto">
                {% if articles %}
                    <table id="articles" class="table table-striped">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ article.title }}</td>
                                <td>
                                    <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                                    <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                                    <a href="/article/delete/{{ article.id }}" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>No articles to display</p>
                {% endif %}
            </div>
        </div>
     </div>
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}